<!DOCTYPE html>
<html>
<head>
	<title>Library Management System</title>
	<link  rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
</head>
<style>
	table {
		font-family: arial, sans-serif;
		border-collapse: collapse;
		width: 100%;
	}

	td,
	th {
		border: 1px solid #9d9eca;
		text-align: left;
		padding: 8px;
	}

	tr:nth-child(even) {

		background-color: #9ac0da;
	}
	tr:nth-child(odd) {
		background-color: #86cec4;
	}
</style>

<body>



	<nav class=" mb-5, navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
          <a class="navbar-brand animate__animated animate__pulse" href="#">Library Management System</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <a class="nav-link active animate__animated animate__rotateInUpLeft" aria-current="page" href="/">Home</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

	  
	  <img class="rounded mx-auto d-block" src="libr.jpg"/>	  
	  <br>


	  <h1 class="fs-1, my-5, mx-3, bg-success p-2 text-dark bg-opacity-25 animate__animated animate__slideInLeft animate__faster">All Books</h1>
	<table class="animate__animated animate__backInUp animate__fast">
		<tr>
			<th>Book Name</th>
			<th>Book Author</th>
			<th>Book Pages</th>
			<th>Book Price</th>
			<th>Book Availability</th>
			<th>Issue</th>
			<th>Return</th>
			<th>Delete</th>
		</tr>
		<% data.forEach(element=> { %>
			<tr>
				<td>
					<%= element.bookName %>
				</td>
				<td>
					<%= element.bookAuthor %>
				</td>
				<td>
					<%= element.bookPages %>
				</td>
				<td>
					<%= element.bookPrice %>
				</td>
				<td>
					<%= element.bookState %>
				</td>
				<td>
					<%= element.bookleft %> <form action="/issue" method="post">
						<input type="text" style="display: none;"
							name="bookName"
							value="<%= element.bookName %>">
						<button class = "btn btn-success" type="submit">Issue</button>
					</form>
				</td>
				<td>
					<form action="/return" method="post">
						<input type="text" style="display: none;"
							name="bookName"
							value="<%= element.bookName %>">
						<button class="btn btn-primary" type="submit">Return</button>
					</form>
				</td>
				<td>
					<form action="/delete" method="post">
						<input type="text" style="display: none;"
							name="bookName"
							value="<%= element.bookName %>">
						<button class="btn btn-danger" type="submit">Delete</button>
					</form>
				</td>
			</tr>
			<% }) %>
	</table>


	<h3 class="my-5, mx-2">Add Book</h3>

	<form class = "mx-2"action="/project" method="post">
		<input type="text" placeholder="Book Name"
			name="bookName">
		<input type="text" placeholder="Book Author"
			name="bookAuthor">
		<input type="text" placeholder="Book Pages"
			name="bookPages">
		<input type="text" placeholder="Book Price"
			name="bookPrice">
		<button class = "btn btn-warning" type="submit">Add</button>
	</form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
</body>

</html>
